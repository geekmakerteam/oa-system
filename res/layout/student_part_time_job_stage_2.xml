<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/student_part_time_job_stage_2_tv_title"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/repair_activity_tv_head_space_bottom"
            android:gravity="center"
            android:text="标题" />

        <Spinner
            android:id="@+id/student_part_time_job_stage_2_spinner_wish_one"
            android:layout_width="100dp"
            android:layout_height="48dp" >
        </Spinner>

        <Spinner
            android:id="@+id/student_part_time_job_stage_2_spinner_wish_two"
            android:layout_width="100dp"
            android:layout_height="48dp" >
        </Spinner>

        <com.iangclifton.android.floatlabel.FloatLabel
            android:id="@+id/student_part_time_job_stage_2_fl_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:hint="填写原因" >
        </com.iangclifton.android.floatlabel.FloatLabel>

        <Button
            android:id="@+id/student_part_time_job_stage_2_btn_submit"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="提交" />
    </LinearLayout>

</ScrollView>